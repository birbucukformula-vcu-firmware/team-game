{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Raylib Build",
            "type": "process",
            "command": "${workspaceFolder}/tools/w64devkit/bin/gcc.exe",
            "args": [
                "-g",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/main.exe",
                "-I${workspaceFolder}/external/raylib/include",
                "-L${workspaceFolder}/external/raylib/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-Wall"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${workspaceFolder}/tools/w64devkit/bin;${env:PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Tum projeyi derler ve main.exe olusturur"
        }
    ]
}